<body>
  <div class="container">
    <div class="row">
      <div class="col-8 mb-3">
          <h4 class="mb-4 text-color col-4 text-center pb-2 pt-2 rounded-pill">配送先登録/一覧</h4>

          <%= form_with model:@shipping_address, url: shipping_address_path, local:true do |f| %>

          <div class="field mb-1">
            <%= f.label :"郵便番号(ハイフンなし)", class: 'col-4' %>
            <%= f.text_field :postcode, autofocus: true, class: 'rounded', placeholder: "0000000" %>
          </div>

          <div class="field mb-1">
            <%= f.label :"住所", class: 'col-4' %>
            <%= f.text_field :address, autofocus: true, class: 'rounded col-5', placeholder: "東京都渋谷区代々木神園町0-0" %>
          </div>

          <div class="field mb-1">
            <%= f.label :"宛名", class: 'col-4' %>
            <%= f.text_field :name, autofocus: true, class: 'rounded', placeholder: "令和道子" %>
            <%= f.submit "変更内容を保存", class: 'btn btn-primary col-3 offset-2' %>
          </div>
          <% end %>
      </div>
      
      <div class="col-4 shipping_edit_image"></div>
      
    </div>
  </div>
</body>