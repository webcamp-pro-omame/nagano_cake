<body>
  <div class="container">
    <div class="row">
      <div class="col">
          <h4 class="mb-4 cart-color col-3 text-center">マイページ</h4>
          <h4 class="font-weight-bold">登録情報　<%= link_to "編集する", edit_customers_path , class: 'btn btn-primary' %></h4>

          <table class="table table-bordered border-dark col-7 mt-3 mb-5">
              <tr>
                  <th class="table-active col-2">氏名</th>
                  <th class="col-4"><%= @customer.last_name %><%= @customer.first_name %></th>
              </tr>
              <tr>
                  <th class="table-active">カナ</th>
                  <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
              </tr>
              <tr>
                  <th class="table-active">郵便番号</th>
                  <th><%= @customer.postcode %></th>
              </tr>
              <tr>
                  <th class="table-active">住所</th>
                  <th><%= @customer.address %></th>
              </tr>
              <tr>
                  <th class="table-active">電話番号</th>
                  <th><%= @customer.phone_number %></th>
              </tr>
              <tr>
                  <th class="table-active">メールアドレス</th>
                  <th><%= @customer.email %></th>
              </tr>
          </table>

          <h4 class="font-weight-bold">配送先　　<%= link_to "一覧を見る", shipping_addresses_path , class: 'btn btn-primary col-2' %></h4>

          <h4 class="font-weight-bold">注文履歴　<%= link_to "一覧を見る", orders_path , class: 'btn btn-primary col-2' %></h4>

      </div>
    </div>
  </div>
</body>