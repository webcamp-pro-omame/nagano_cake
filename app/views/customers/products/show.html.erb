<div class="container">
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <%= attachment_image_tag @product,:image, size:"300x200", fallback: "no_image.jpg" %>
      </div>
      <div class="col-md-4">
        <div class="card-body">
          <h5 class="card-title">
            <%= @product.name %>
          </h5>
          <p class="card-text">
            <%= @product.detail%>
          </p>
          <p class="card-text">
            <% tax_in = @product.price * 1.10 %>
              ¥ <%= tax_in.round %>(税込)
          </p>
        </div>
      </div>
    </div>
  </div>
    
  
  <div class = "row">
    <div>
      <%= form_with model:@cart_product, url:cart_products_path, method: :post, local:true do |f|%>
        <%= f.hidden_field :product_id, value: @product.id %>
        <%= f.select :amount, options_for_select((1..10).to_a) %>
        <%= f.submit 'カートに入れる', class:"btn btn-success" %>
      <% end %>
    </div>
  </div>

</div>