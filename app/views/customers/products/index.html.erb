<div class = "container">
  <div class = "row">
    <div class = "col md-12">
      <h3>商品一覧</h3>(全<%= @products.count %>件)
    </div>
  </div>
</div>

<div class = "container">
  <div class ="row">
    <div class = "col md-12">
      <% @products.each do |product| %>
        <div class="card" style="width: 15rem;">
          <%= attachment_image_tag product,:image, size:"100x100", fallback: "no_image.jpg" %>
          <div class="card-body">
            <p class="card-title">
              <%= product.name %>
            </p>
            <p class="card-text">
              ¥<%= product.price %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>