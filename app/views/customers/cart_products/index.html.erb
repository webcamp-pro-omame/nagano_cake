 <div class="container">
   <div class="row">
      <div class="col">
        <h2 class="mb-5 cart-color col-3 text-center">ショッピングカート</h2>
          <%= link_to 'カートを空にする', cart_products_destroy_all, method: :delete, class:'btn btn-dan' %>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th>小計</th>
                <th></th>
              </tr>
            </thead>
            
            <tbody>
              <% @cart_products.each do |cart_product| %>
              <tr>
                <td><%= cart_product.name %></td>
                <td><%= cart_product.price %></td>
                <td>
                  <%= form_with model:cart_products, local:true do |f|%>
                    <%= f.hidden_field :product_id, value: @product.id %>
                      <select class="form-select" aria-label="Default select example">
                        <option selected>個数選択</option>
                        <%= f.select_tag :amount, options_for_select((1..10).to_a) %>
                      </select>
                      <%= f.submit '変更', class:"btn btn-success" %>
                  <% end %>
                </td>
                <td><%= cart_product.price%></td>
                <td>
                  <%= link_to "削除する", cart_products_path(@cart_product), method: :delete, class:"btn btn-sm btn-danger" %>
                </td>
              </tr>
            </tbody>
          </table>
      </div>
   </div>
   
   <div class = "row">
     <div class = "col">
       <%= link_to '買い物を続ける', root_path, class:'btn btn-primary' %>
       
       <table class="table table-hover table-inverse">
        <tr>
          <th>合計金額</th>
          <td>
            <% @sum = 0 %>
            <% @cart_products.each do |product| %>
              <% @sum += product.price %>
            <% end %>
            <%= @sum %>
          </td>
        </tr>
      </table>
     </div>
   </div>
   
   <div class = "row">
     <div class = "col">
       <%= link_to '情報入力に進む', new_order_path, class:'btn btn-success' %>
     </div>
   </div>
   
 </div>
       