 <div class="container">
   <div class="row">
      <div class="col">
        <h4 class="mb-4 text-color col-3 text-center">ショッピングカート</h4>
        <div class="text-right mb-1">
          <%= link_to 'カートを空にする', cart_products_destroy_all_path, method: :delete, class:'btn btn-primary button' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
          <table class="table table-bordered">
            <thead>
              <tr class="table-color">
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th>小計</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @sum = 0 %>
              <% @cart_products.each do |cart_product| %>
                <tr>
                  <td>
                    <%= attachment_image_tag cart_product.product, :image, size:"60x50", fallback: "no_image.jpg" %>
                    <%= cart_product.product.name %>
                  </td>
                  <td>
                    <% tax_in = cart_product.product.add_tax_price %>
                      <%= tax_in.to_s(:delimited) %>
                  </td>
                  <td>
                    <%= form_with model:cart_product, local:true do |f|%>
                      <%= f.select :amount, options_for_select((1..10).to_a, selected:cart_product.amount) %>
                      <%= f.submit '変更', class:"btn btn-primary" %>
                    <% end %>
                  </td>
                  <td>
                    <% @subtotal = tax_in * cart_product.amount %>
                    <%= @subtotal.to_s(:delimited) %>
                  </td>
                  <td>
                    <%= link_to "削除する", cart_product_path(cart_product), method: :delete, class:"btn btn-sm btn-primary" %>
                  </td>
                </tr>
                <% @sum += @subtotal %>
              <% end %>
            </tbody>
          </table>
      </div>
   </div>

   <div class = "row">
     <div class = "col">
       <%= link_to '買い物を続ける', root_path, class:'btn btn-primary' %>
       <table align="right" class="table table-bordered col-2">
        <tr>
          <td class="table-color">合計金額</td>
          <td>
            ¥<%= @sum.to_s(:delimited) %>
          </td>
        </tr>
      </table>
     </div>
   </div>

   <div class = "row">
     <div class = "col text-center">
       <%= link_to '情報入力に進む', orders_new_path, class:'btn btn-primary ' %>
     </div>
   </div>

 </div>
