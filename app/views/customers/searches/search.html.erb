<div class="container">
  <div class="row">
    <div class="col md-12">
      <h3>商品一覧</h3>(全<%= @product.count %>件)
    </div>
  </div>
</div>

<div class="container">
  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @product.each do |product| %>
      <div class="col-md-3">
        <div class="card mb-3">
          <%= link_to product_path(product.id) do %>
            <%= attachment_image_tag product,:image, size:"255x210", fallback: "no_image.jpg" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= product.name %>
            </h5>
            <p class="card-text">
              <% tax_in = product.price * 1.10 %>
                ¥ <%= tax_in.round %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>