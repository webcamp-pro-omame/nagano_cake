<div class="container mt-3">
  <h3 class="text-color text-center col-3 pt-2 pb-2 rounded-pill"><strong>新着商品</strong></h3>
  <div class="row">
    <% @products.last(4).reverse.each do |product| %>
      <div class="card-group">
          <div class ="card card border-light mb-3 ml-2 mr-2">
            <div class ="card-img-top">
              <%= link_to product_path(product.id) do %>
                <%= attachment_image_tag product,:image, size:"261x185", fallback: "no_image.jpg" %>
              <% end %>
            </div>

            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">
                <% tax_in = product.add_tax_price %>
                  ¥<%= tax_in.to_s(:delimited) %>
              </p>
            </div>
          </div>
      </div>
    <% end %>
  </div>
  <div>
