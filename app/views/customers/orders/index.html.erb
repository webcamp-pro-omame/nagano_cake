<body>
  <div class="container">
    <div class="row">
      <div class="col">
          <h2 class="mb-5 login-color col-3 text-center">注文履歴一覧</h2>
          
          <table class="table table-bordered border-dark col-12 mt-3 mb-5">
              <tr>
                  <th class="table-active">注文日</th>
                  <th class="table-active">配送先</th>
                  <th class="table-active">注文商品</th>
                  <th class="table-active">支払い金額</th>
                  <th class="table-active">ステータス</th>
                  <th class="table-active">注文詳細</th>
              </tr>
              <% @orders.each do |order| %>
              <tr>
                  <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                  <td><%= order.postcode %><br><%= order.address %><br><%= order.name %></td>
                  <td>
                      <% order.order_products.each do |order_product| %>
                      <%= order_product.product.name %>
                      <% end %>
                  </td>
                  <td><%= order.bill %>円</td>
                  <td><%= order.status %></td>
                  <td><%= link_to "表示する", order_path(order) ,class: "btn btn-primary btn-sm" %></td>
              </tr>
              <% end %>
          </table>
      </div>
    </div>
  </div>
</body>