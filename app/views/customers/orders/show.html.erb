<body>
  <div class="container">
    <div class="row">
      <div class="col-12">
          <h2 class="mb-5 login-color col-3 text-center ml-5">注文履歴詳細</h2>
      </div>
    </div>
          <div class="row">
            <div class="col-7"><p class="font-weight-bold">注文情報</p></div>
            <div class="col-3"><p class="font-weight-bold ml-3">請求情報</p></div>
          <table class="table table-bordered border-dark col-7">
            
                  <tr>
                      <th class="table-active col-3">注文日</th>
                      <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
                  </tr>
                  <tr>
                    <th class="table-active">配送先</th>
                    <th><%= @order.postcode %><br><%= @order.address %><br><%= @order.name %></th>
                  </tr>
                  <tr>
                    <th class="table-active">支払い方法</th>
                    <th><%= @order.payment_method %></th>
                  </tr><tr>
                    <th class="table-active">ステータス</th>
                    <th><%= @order.status %></th>
                  </tr>
          </table>
          <table class="table table-bordered border-dark col-3 ml-3 h-75">
                  <tr>
                      <th class="table-active">表品合計</th>
                      <th><%= @order.bill - @order.shipping_fee %>円</th>
                  </tr>
                  <tr>
                    <th class="table-active">配送料</th>
                    <th><%= @order.shipping_fee %>円</th>
                  </tr>
                  <tr>
                    <th class="table-active">ご請求額</th>
                    <th><%= @order.bill %>円</th>
                  </tr>
          </table>
          </div>
          <div class="col-7"><p class="font-weight-bold">注文内容</p></div>
          <table class="table table-bordered border-dark col-9 mt-3 mb-5">
              <tr>
                  <th class="table-active col-6">商品</th>
                  <th class="table-active">単価（税込）</th>
                  <th class="table-active">個数</th>
                  <th class="table-active">小計</th>
              </tr>
              <% @order_products.each do |order_product| %>
              <tr>
                  <th><%= order_product.product.name %></th>
                  <th><%= order_product.product.add_tax_price %>円</th>
                  <th><%= order_product.amount %>個</th>
                  <th><%= order_product.product.add_tax_price * order_product.amount %>円</th>
              </tr>
              <% end %>
          </table>
      </div>
    </div>
  </div>
</body>