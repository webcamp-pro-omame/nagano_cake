@orders = current_customer.orders.page(params[:page]).per(8)
<% @orders.each do |order| %>
<tr>
    <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
    <td><%= order.postcode %><br><%= order.address %><br><%= order.name %></td>
    <td>
        <% order.cart_products.each do |cart_product| %>
        <%= cart_product.product.name %>
        <% end %>
    </td>
    <td><%= order.bill %>円</td>
    <td><%= order.status %></td>
    <td><%= link_to "表示する", order_path(order) ,class: "btn btn-primary btn-sm" %></td>
</tr>
<% end %>




