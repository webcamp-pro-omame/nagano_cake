<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name ="viewport" content="width=device-width, initial-scale=1, maximim-scale=1">
      <script type="text/javascript" src="https://checkout.pay.jp" class="payjp-button" data-key="公開鍵"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg  mb-5">
        <div class="container">
          <h2><%= link_to 'NAGANO CAKE', root_path, class: 'nav-link text-dark logo' %></h2>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <% if request.fullpath.include?("admin") %>
              <%= render "layouts/header_admin" %>
            <% else %>
              <%= render "layouts/header_customer" %>
            <% end %>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="mt-3"></div>
    </footer>
    
  </body>

</html>
