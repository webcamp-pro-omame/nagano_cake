<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="mb-4 login-color col-2 text-center">注文履歴一覧</h4>
    </div>
    <div class="col-8 mx-auto">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%=link_to "#{l order.created_at}", admins_order_path(order.id) %></td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><%= order.order_products.amount %></td>
            <td><%= order.status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>