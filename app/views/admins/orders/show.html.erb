<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5 class="mb-4 col-2 pt-2 pb-2 text-center rounded-pill text-white bg-dark">注文履歴詳細</h5>
    </div>
    <table>
      <tbody>
        <tr>
          <th>購入者</th>
          <td><%= link_to "#{@order.customer.last_name} #{@order.customer.first_name}", admins_customer_path(@order.id), class: "text-dark border-bottom border-dark" %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <%= form_with model: @order, local: true do |f| %>
            <td>
              <%= f.select :status, [["入金待ち", "入金待ち"], ["入金確認", "入金確認"], ["製作中", "製作中"], ["発送準備中", "発送準備中"], ["発送済み", "発送済み"]], selected: "入金待ち", class: "form-control" %>
              <%= f.submit "更新", class: "btn btn-dark btn-sm" %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col">
      <table class="table mt-3 table-borderless table-hover rounded-top rounded-bottom table_border_radius">
        <thead class="thead-dark">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @sum = 0 %>
          <% @order_products.each do |order_product| %>
          <tr>
            <td><%= order_product.product.name %></td>
            <td><%= order_product.price %></td>
            <td><%= order_product.amount %></td>
            <td>
              <% @products_price = order_product.price * order_product.amount %>
              <%= @products_price %>
            </td>
            <td></td>
            <% @sum += @products_price %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @sum %>円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td>800円</td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td><%= @sum + 800 %>円</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>