<div class="container">
  <div class="row">
    <h4 class="mb-5 login-color col-4 text-center"><%= "#{@customer.last_name}""#{@customer.first_name}" %>さんの会員情報編集</h4>
    <table class="table table-borderless">
      <%= form_with model:@customer, url: admins_customer_path, local: true do |f| %>
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postcode %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address, size: 70 %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :is_valid, true %>
              <%= f.label :is_valid, "有効", value: true, class: "mr-3" %>
              <%= f.radio_button :is_valid, false %>
              <%= f.label :is_valid, "退会", value: false %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= f.submit "変更を保存", class: "btn btn-success" %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>