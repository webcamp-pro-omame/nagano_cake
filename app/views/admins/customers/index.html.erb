<div class="container">
  <div class="row">
    <div class="col-md-12"></div>
      <h4 class="mb-4 login-color col-2 text-center">会員一覧</h4>
    </div>
    <div class="col-8 mx-auto">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to "#{customer.first_name} + #{customer.last_name}", admins_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <td><%= customer.is_valid %></td>
          </tr>
          <% end %>
          <%= paginate @customers %>
        </tbody>
      </table>
    </div>
  </div>
</div>