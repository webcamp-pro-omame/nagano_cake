<div class="container">
  <div class="row">
    <div class="col-lg-5">

      <div class="box2 d-flex align-items-center justify-content-center">
        <div class="overflow-auto" style="width:70%; height:300px">
          <div class="table-responsive">
            <table class='table table-borderless table-hover'>
              <thead>
                <tr>
                  <th colspan="2">ジャンル一覧</th>
                </tr>
              </thead>

              <tbody>
                <% @genres.each do |genre| %>
                  <tr>
                    <td><%= genre.name %></td>
                    <td class="d-flex justify-content-end">
                      <%= link_to "edit", edit_admins_genre_path(genre.id), class: "btn btn-dark" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>

    <div class="col-lg-1"></div>

    <div class="col-lg-3">
      <%= form_with model:@genre, url:'/admins/genres', local:true do |f| %>
        <h5>ジャンルの追加はコチラ</h5>
        <%= f.text_field :name %>
        <%= f.submit 'Go!' %>
      <% end %>
    </div>

    <div class="col-lg-3">
      <div class="staff-image"></div>
    </div>

  </div>
</div>