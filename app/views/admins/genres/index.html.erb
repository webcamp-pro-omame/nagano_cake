<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <div class="box2">

        <div class="table-responsive">
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th>ジャンル一覧</th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td><%= link_to "edit", edit_admins_genre_path(genre.id), class: "btn btn-dark" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>

    <div class="col-lg-2"></div>

    <div class="col-lg-3">
      <%= form_with model:@genre, url:'/admins/genres', local:true do |f| %>
        <h5>ジャンルの追加はコチラ</h5>
        <%= f.text_field :name %>
        <%= f.submit 'Go!' %>
      <% end %>
    </div>

    <div class="col-lg-2">
      <div class="staff"></div>
    </div>

  </div>
</div>