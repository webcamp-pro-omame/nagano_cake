<h2>ジャンル一覧・追加</h2>
<%= form_with model: @genre, url: "/admin/genres" do |f| %>
  <%= f.text_field: @genre, 'ジャンル名' %>
  <%= f.submit "新規登録", :button, class: "btn btn-success" %>
<% end %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre, class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>