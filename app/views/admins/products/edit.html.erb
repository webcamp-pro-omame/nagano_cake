<h1>商品編集</h1>
<%= form_with model:@product, url: admins_product_path, local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :detail %>
  <h4>ジャンル</h4>
  <%= f.collection_select(:genre, Genre.all, :id, :name, {prompt: "選択してください"}) %>
  <h4>税抜価格</h4>
  <%= f.text_field :price %>円
  <h4>販売ステータス</h4>
    <%= f.radio_button :status, :true %>
    <%= f.label :status, "販売中", value: true %>
    <%= f.radio_button :status, :false %>
    <%= f.label :status, "販売停止中", value: false %>
  <%= f.submit '変更を保存', class: 'btn btn-success' %>
<% end %>