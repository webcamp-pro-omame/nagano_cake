<h1>商品新規登録</h1>
<%= form_with model: @product, url: "/admin/products", local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.file_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :title %>
  <h4>商品説明</h4>
  <%= f.text_area :detail %>
  <h4>ジャンル</h4>
  <%= form.select :genre, [ ["ケーキ",1], ["プリン", 2], ["焼き菓子", 3 ] ,["キャンディ", 4] prompt: "-- 選択してください --", class: "hoge" %>
  <h4>税抜価格</h4>
  <%= f.text_field :price %>円
  <h4>販売ステータス</h4>
  <%= f.radio_button :status, "販売中" %>販売中 <%= form.radio_button :status, "販売停止中" %>販売停止中
  <%= f.submit '新規登録', class: 'btn btn-success' %>
<% end %>