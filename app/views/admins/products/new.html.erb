<h1>商品新規登録</h1>
<%= form_with model: @product, url: "/admins/products", local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.file_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :detail %>
  <h4>ジャンル</h4>
  <%= f.collection_select(:name, @genres, :id, :name, {prompt: "選択してください"}) %>
  <h4>税抜価格</h4>
  <%= f.text_field :price %>円
  <h4>販売ステータス</h4>
  <%= f.radio_button :status, "販売中" %>販売中 <%= f.radio_button :status, "販売停止中" %>販売停止中
  <%= f.submit '新規登録', class: 'btn btn-success' %>
<% end %>